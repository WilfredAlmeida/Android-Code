        <activity android:name=".Started_Service_Start_Stop_Button">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />

        <service android:name=".Service__Started_Service_Play_Music_Start_Stop_Buttons" />
